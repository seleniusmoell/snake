package Game;

public class Snake {
	
	private int x;
	private int y;
	private int size;
	private String dir = "down";
	
	public Snake() {
		x = 150;
		y = 15;
		size = 4;
		dir = dir.down;
	}
	
	
	public int getX(){
				
		return x;
	}
	
	public int getY(){
		return y;
	}
	

	public int getSize(){
		return size;
	}
	
	public void setX(){
		x += 0;
	}
	
	public void setY(){
		y += 1;
	}
	
	public void sizeUp(){
		size += 4;
	}
}
