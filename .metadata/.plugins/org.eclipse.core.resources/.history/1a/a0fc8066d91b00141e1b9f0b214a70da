package Game;

import javax.swing.JFrame;

public class Game {

	public static void main (String[] args) throws InterruptedException{

		Snake snake = new Snake();

		Board board = new Board(snake);

		JFrame f = new JFrame("Snake");			
		board.openWindow(f);

		// test game loop
		while (true){
			snake.moveSnake();
			board.repaint();
			Thread.sleep(10);
		}
		

			GameEvent event = new GameEvent(board);
			//	event.gameLoop();

	}
}


