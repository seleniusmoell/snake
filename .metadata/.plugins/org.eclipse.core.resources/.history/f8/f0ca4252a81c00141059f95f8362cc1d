package Game;

public class Snake {
	
	private int x = 150;
	private int y = 15;
	private int size = 4;
	private String dir = "down";
	
	public Snake() {
	}
	
	
	public int getX(){
				
		return x;
	}
	
	public int getY(){
		return y;
	}
	

	public int getSize() {
		return size;
	}
	
	public void setX(int i) {
		x += i;
	}
	
	public void setY(int i) {
		y += i;
	}
	
	public void sizeUp(){
		size += 4;
	}
	
	public string getDir() {
		return dir;
	}
}
